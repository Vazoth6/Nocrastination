<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="pt.ipt.dam2025.nocrastination.ui.tasks.TasksFragment"
        android:label="Tarefas"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_tasksFragment_to_pomodoroFragment"
            app:destination="@id/pomodoroFragment" />

        <action
            android:id="@+id/action_tasksFragment_to_focusLocationsFragment"
            app:destination="@id/focusLocationsFragment" />

    </fragment>

    <fragment
        android:id="@+id/focusLocationsFragment"
        android:name="pt.ipt.dam2025.nocrastination.ui.focuslocations.FocusLocationsFragment"
        android:label="Zonas de Foco"
        tools:layout="@layout/fragment_focus_locations">

        <action
            android:id="@+id/action_focusLocationsFragment_to_tasksFragment"
            app:destination="@id/tasksFragment"
            app:popUpTo="@id/tasksFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/pomodoroFragment"
        android:name="pt.ipt.dam2025.nocrastination.ui.pomodoro.PomodoroFragment"
        android:label="Pomodoro"
        tools:layout="@layout/fragment_pomodoro">

        <argument
            android:name="task"
            app:argType="pt.ipt.dam2025.nocrastination.domain.models.Task"
            android:defaultValue="@null" />

    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="pt.ipt.dam2025.nocrastination.ui.statistics.StatisticsFragment"
        android:label="EstatÃ­sticas"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="pt.ipt.dam2025.nocrastination.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

</navigation>